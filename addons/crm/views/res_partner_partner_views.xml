<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Partner Form View -->
    <record id="view_res_partner_partner_form" model="ir.ui.view">
        <field name="name">res.partner.partner.form</field>
        <field name="model">res.partner.partner</field>
        <field name="arch" type="xml">
            <form string="Business Partner Information">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="renew_partnership_contract" type="object"
                                class="oe_stat_button" icon="fa-refresh"
                                invisible="contract_end_date == False">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">Renew Contract</span>
                            </div>
                        </button>
                    </div>

                    <group>
                        <group string="Partner">
                            <field name="partner_id" readonly="1"/>
                        </group>
                        <group string="Partnership Details">
                            <field name="partner_type"/>
                            <field name="partnership_start_date"/>
                            <field name="contract_end_date"/>
                        </group>
                    </group>

                    <group string="Financial Terms" col="4">
                        <field name="commission_rate"
                               invisible="partner_type != 'agent'"/>
                        <field name="credit_limit"
                               invisible="partner_type != 'supplier'"/>
                        <field name="shared_revenue" readonly="1"/>
                        <field name="collaboration_count" readonly="1"/>
                    </group>

                    <group string="Performance Metrics" col="4">
                        <field name="supplier_rank" readonly="1"
                               invisible="partner_type != 'supplier'"/>
                        <field name="partnership_duration_days" readonly="1"/>
                        <field name="avg_response_time_hours" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Partner Tree View -->
    <record id="view_res_partner_partner_tree" model="ir.ui.view">
        <field name="name">res.partner.partner.tree</field>
        <field name="model">res.partner.partner</field>
        <field name="arch" type="xml">
            <tree string="Business Partners">
                <field name="partner_id"/>
                <field name="partner_type"/>
                <field name="partnership_start_date"/>
                <field name="contract_end_date"/>
                <field name="shared_revenue"/>
                <field name="collaboration_count"/>
                <field name="supplier_rank"/>
            </tree>
        </field>
    </record>

</odoo>
